<UserControl x:Class="LogViewerPlus.Views.LogDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogViewerPlus.Views"
             xmlns:converters="clr-namespace:LogViewerPlus.Converters"
             xmlns:vm="clr-namespace:LogViewerPlus.ViewModels"
             xmlns:mod="clr-namespace:LogViewerPlus.Models"
             xmlns:serv="clr-namespace:LogViewerPlus.Services"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <converters:MessageTypeToColorConverter x:Key="messageTypeToColorConverter"/>
        <converters:MessageTypeToVisibilityMultiConverter x:Key="messageTypeToVisibilityMultiConverter"/>
    </UserControl.Resources>

    <DockPanel LastChildFill="True" DataContext="{Binding SelectedLogFile}" Background="#FFF7F7F2">


        <StackPanel DockPanel.Dock="Top" Height="35" HorizontalAlignment="Stretch" Background="#FFDADBDF">
            <Label Content="Log Viewer Plus" FontFamily="Rockwell" FontSize="16" Foreground="Black" HorizontalAlignment="Center"/>
        </StackPanel>

        <StackPanel DockPanel.Dock="Left" HorizontalAlignment="Left" Margin="20,15,0,0" Width="110" VerticalAlignment="Top">
            <ToggleButton Content="{Binding Filters.ErrorCount}" ContentStringFormat="Error ({0})" HorizontalAlignment="Left" Margin="0,0,15,15"
                     Style="{StaticResource errorFilter}" IsChecked="{Binding Filters.IsErrorSelected}" FontFamily="Rockwell"
                     Command="{Binding DataContext.ChangeFilterSelection, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=UserControl}}" Foreground="Red"/>

            <ToggleButton Content="{Binding Filters.WarningCount}" ContentStringFormat="Warning ({0})" HorizontalAlignment="Left" Margin="0,0,15,15"
                     Style="{StaticResource warningFilter}" IsChecked="{Binding Filters.IsWarningSelected}" FontFamily="Rockwell"
                     Command="{Binding DataContext.ChangeFilterSelection, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=UserControl}}" Foreground="Orange"/>

            <ToggleButton Content="{Binding Filters.DebugCount}" ContentStringFormat="Debug ({0})" HorizontalAlignment="Left" Margin="0,0,15,15"
                     Style="{StaticResource debugFilter}" IsChecked="{Binding Filters.IsDebugSelected}" FontFamily="Rockwell"
                     Command="{Binding DataContext.ChangeFilterSelection, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=UserControl}}" Foreground="Blue"/>

            <ToggleButton Content="{Binding Filters.InfoCount}" ContentStringFormat="Info ({0})" HorizontalAlignment="Left" Margin="0,0,15,15"
                     Style="{StaticResource infoFilter}" IsChecked="{Binding Filters.IsInfoSelected}" FontFamily="Rockwell"
                     Command="{Binding DataContext.ChangeFilterSelection, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=UserControl}}" Foreground="Green"/>

            <ToggleButton Content="{Binding Filters.NoneCount}" ContentStringFormat="None ({0})" HorizontalAlignment="Left" Margin="0,0,10,10"
                     Style="{StaticResource noneFilter}" IsChecked="{Binding Filters.IsNoneSelected}" FontFamily="Rockwell"
                     Command="{Binding DataContext.ChangeFilterSelection, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=UserControl}}" Foreground="Black"/>
        </StackPanel>

        <StackPanel DockPanel.Dock="Bottom" Height="40" Orientation="Horizontal" Margin="20,10,10,10" >
            <Label Content="Log File:" FontFamily="Rockwell" FontSize="12" Foreground="Black" Width="58"/>
            <Label Content="{Binding FilePath}" FontFamily="Rockwell" FontSize="12" Foreground="Black"/>
        </StackPanel>

        <TextBox DockPanel.Dock="Bottom" Text="{Binding SelectedLogEntry.Message}" Height="140" Margin="20,5"
                     ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Auto"
                     TextWrapping="Wrap"  IsReadOnly="True" FontFamily="Rockwell" FontSize="11" BorderBrush="#FF131415" OpacityMask="#FF090909" Background="#FFFFFF"/>
        <ListView  ItemsSource="{Binding FilteredFileEntries}"
                  SelectedItem="{Binding SelectedLogEntry}"
                  VirtualizingPanel.IsVirtualizing="True" Margin="20,10" BorderBrush="#FF09090A" FontFamily="Rockwell" FontSize="11" OpacityMask="#FF080808" Background="#FFFFFF">
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}">
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="Padding" Value="0"/>
                    <Style.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#b0e0e6"/>
                    </Style.Resources>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Background" Value="Transparent"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{Binding ShortTime}" Foreground="{Binding MessageType, Converter={StaticResource messageTypeToColorConverter}}"/>
                        <Label Content="{Binding ShortMessage}" Foreground="{Binding MessageType, Converter={StaticResource messageTypeToColorConverter}}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </DockPanel>
</UserControl>
